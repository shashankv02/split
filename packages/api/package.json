{
  "private": true,
  "name": "@split/api",
  "version": "1.0.0",
  "main": "src/index.ts",
  "license": "MIT",
  "scripts": {
    "start": "ts-node src/index.ts",
    "watch": "tsnd --respawn --transpileOnly --no-notify --ignore-watch node_modules src/index.ts",
    "work": "ts-node src/workers.ts",
    "db:migrate": "ts-node node_modules/typeorm/cli.js migration:run -c ${NODE_ENV}",
    "db:create": "ts-node node_modules/typeorm/cli.js migration:create -c ${NODE_ENV} -n",
    "db:generate": "ts-node node_modules/typeorm/cli.js migration:generate -c ${NODE_ENV} -n",
    "db:rollback": "ts-node node_modules/typeorm/cli.js migration:revert -c ${NODE_ENV}",
    "db:seed": "ts-node src/seed.ts",
    "build": "rimraf dist && tsc --build",
    "typecheck": "tsc --noEmit",
    "lint": "eslint --cache --ext .jsx,.js,.ts,.tsx src",
    "prettify": "prettier --write './src/**/*.ts'",
    "pre-commit": "lint-staged"
  },
  "lint-staged": {
    "*.{js,jsx,json,ts,tsx,html}": [
      "prettier --write",
      "git add"
    ],
    "*.{js,jsx,ts,tsx}": [
      "eslint --fix --cache --ext .jsx,.js,.ts,.tsx src",
      "git add"
    ]
  },
  "dependencies": {
    "@sendgrid/client": "6.5.5",
    "@sendgrid/mail": "6.5.5",
    "@slack/web-api": "5.8.1",
    "apollo-server-express": "2.12.0",
    "aws-sdk": "2.650.0",
    "bcryptjs": "2.4.3",
    "bull": "3.13.0",
    "connect-redis": "4.0.4",
    "dataloader": "2.0.0",
    "dayjs": "1.8.26",
    "dotenv": "8.2.0",
    "express": "4.17.1",
    "express-session": "1.17.1",
    "ioredis": "4.16.3",
    "jsonwebtoken": "8.5.1",
    "morgan": "1.10.0",
    "nodemailer": "6.4.6",
    "pg": "7.18.2",
    "reflect-metadata": "0.1.13",
    "type-graphql": "0.17.6",
    "typedi": "0.8.0",
    "typeorm": "0.2.24"
  },
  "devDependencies": {
    "@types/bcryptjs": "2.4.2",
    "@types/bull": "3.12.2",
    "@types/connect-redis": "0.0.13",
    "@types/express": "4.17.6",
    "@types/express-jwt": "0.0.42",
    "@types/express-session": "1.17.0",
    "@types/faker": "4.1.11",
    "@types/ioredis": "4.16.0",
    "@types/jest": "24.9.1",
    "@types/jsonwebtoken": "8.3.9",
    "@types/morgan": "1.9.0",
    "@types/node": "11.15.12",
    "@types/nodemailer": "6.4.0",
    "@typescript-eslint/eslint-plugin": "2.30.0",
    "@typescript-eslint/parser": "2.30.0",
    "babel-eslint": "10.1.0",
    "eslint": "6.8.0",
    "eslint-config-prettier": "6.11.0",
    "eslint-plugin-flowtype": "4.7.0",
    "eslint-plugin-import": "2.20.2",
    "faker": "4.1.0",
    "jest": "24.9.0",
    "prettier": "1.19.1",
    "ts-jest": "24.3.0",
    "ts-node": "8.9.1",
    "ts-node-dev": "1.0.0-pre.44",
    "typescript": "3.8.3"
  },
  "workspaces": {
    "nohoist": [
      "typeorm",
      "typeorm/**"
    ]
  }
}
